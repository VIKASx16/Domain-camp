#include <iostream>
using namespace std;

int main() {
    int N;
    cout << "Enter a positive integer: ";
    cin >> N;

    // Formula to calculate the sum of N natural numbers
    int sum = (N * (N + 1)) / 2;

    cout << "The sum of the first " << N << " natural numbers is: " << sum << endl;

    return 0;
}
